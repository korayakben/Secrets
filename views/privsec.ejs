<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secrets</title>
    <link rel="stylesheet" href="/privsec.css">
    <link rel="web icon" href="/icons/key.png">
    <link rel="stylesheet" href="/bootstrap.min.css">
</head>
<body style="background-color: rgb(230, 230, 230);">


    <div class="container">
        <div class="header">Privacy and Security</div>

        <hr>

        
        <div class="dropdown-container">

        <!-- Email Dropdown -->
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
            <span>Change Your Email</span>
          </button>
          <div class="dropdown-menu">
            <form action="/settings/privsec" method="post">
              <label for="email">Current Email:</label>
              <input type="email" name="email" required>

              <label for="newemail">New Email:</label>
              <input type="email" name="newemail" required>

              <label for="confirmemail">Confirm Your Email:</label>
              <input type="email" name="confirmemail" required>

              <button type="submit" name="button" value="change_email">Change Your Email</button>
            </form>
          </div>
        </div>


        <!-- Password Dropdown -->
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
            <span>Change Your Password</span>
          </button>
          <div class="dropdown-menu">
            <form action="/settings/privsec" method="post">
              <label for="password">Current Password:</label>
              <input type="password" name="password" required>

              <label for="newpassword">New Password:</label>
              <input type="password" name="newpassword" required>

              <label for="confirmpassword">Confirm Your Password:</label>
              <input type="password" name="confirmpassword" required>

              <button type="submit" name="button" value="change_password">Change Your Password</button>
            </form>
          </div>
        </div>


        <!-- Login History -->
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
            <span>Login Histories</span>
          </button>
          <div class="dropdown-menu">
            <div class="history-div">
              <span><%= login_date %></span>
            </div>
          </div>
        </div>


        <!-- Delete Account -->
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false" id="delete-account">
            <span>Delete Your Account</span>
          </button>
          <div class="dropdown-menu">
            <form action="/settings/privsec" method="post">
              <label for="password">Password:</label>
              <input type="password" name="password" required>

              <label for="confirmpassword">Confirm Your Password:</label>
              <input type="password" name="confirmpassword" required>

              <button type="submit" name="button" value="delete_account" id="delete-account-btn">Delete Your Account</button>
            </form>
          </div>
        </div>

      </div>

    </div>
    
    
    
      <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js" integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+" crossorigin="anonymous"></script>
</body>
</html>